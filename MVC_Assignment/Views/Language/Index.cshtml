@model IEnumerable<Language>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create new language</a>
</p>

@if(Model != null){
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                  @Html.ActionLink("Delete", "DeleteLanguage", "Language", new {  id=item.LanguageId  })
            </td>
        </tr>
}
    </tbody>
</table>
} else{
    <p>No results found.</p>
}