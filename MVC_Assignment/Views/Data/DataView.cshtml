@model IEnumerable<MVC_Assignment.Models.Person>

@{
    ViewData["Title"] = "DataView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DataView</h1>

<p>
    <a asp-controller="Data" asp-action="AddNewPerson">Add person</a>
</p>

<form method="post" action="@Url.Action("DataView", "Data")">
    <label>Search for a residence...</label>
    <input type="text" name="residence_input" />
    <input type="submit" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.Place)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
