@model MVC_Assignment.ViewModels.PeopleViewModel


@foreach(var item in Model.People)
          {
            <div class="row">
                <div class="col">
                        @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="col">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                </div>
                <div class="col">
                        @Html.DisplayFor(modelItem => item.City)
                </div>
                <div class="col">
                        @Html.ActionLink("Delete", "DeletePerson", "Data", new {  id=item.Id  })
                </div>
            </div>
          }
