<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - MVC_Assignment</title>
</head>

<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
<link rel="stylesheet" href="~/css/StyleSheet.css"/>

<body>
    
   <header>
       <div class="container pt-3">
        <ul>
            
            <li class>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li> 
            <li>
                <a asp-area="" asp-controller="People" asp-action="Index">Show people</a>
            </li>
            <li>
                <a asp-area="" asp-controller="City" asp-action="Index">Show cities</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Country" asp-action="Index">Show countries</a>
            </li>
             <li>
                <a asp-area="" asp-controller="Language" asp-action="Index">Show languages</a>
            </li>
             <li>
                <a asp-area="" asp-controller="LanguagePerson" asp-action="Index">Add language to person</a>
            </li>

                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
            </li>
            }
            <li>
                <partial name="_LoginPartial" />
            </li>
           
        </ul>

        </div>
    </header>
     <div class="container pt-3">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required:false)

   

</body>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
 <script src="~/js/scriptic.js"></script>


