
@{
    ViewData["Title"] = "FeverCheck";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

<form asp-action="FeverCheck" method="post">

    <label>Enter temperature: </label><br />

    <input type="text" name="temperature" /><br />

    <input type="submit" value="Check!" />

</form>

 @if(ViewBag.Msg != null)
{
    <p>@ViewBag.Msg</p>
}


